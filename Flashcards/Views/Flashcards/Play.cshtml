@model FlashcardsApp.Models.Flashcard

@{
    ViewData["Title"] = "Play Flashcard";
}

<div class="card flip-container" onclick="flipCard(event)">
    <div class="card-body front">
        <h5>@Model.Category</h5>
        <p>@Html.Raw(Model.Question.Replace("\n", "<br>"))</p>
    </div>
    <div class="card-body back">
        <h5>@Model.Category</h5>
        <p>@Html.Raw(Model.Answer.Replace("\n", "<br>"))</p>
    </div>
</div>

<button class="btn btn-primary" onclick="nextFlashcard()">Next Flashcard</button>

<!-- Include flashcards data as JSON -->
<script id="flashcards-data" type="application/json">
    @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))
</script>
